@model List<Product>
@{
    ViewData["Title"] = "Product List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<thead>
    <div class="d-flex">
        <div class="p-2 w-100"><b>@ViewData["Title"]</b></div>
        <div class="p-2 flex-shrink-1">
            <a asp-action="Create" asp-controller="Product" class="btn btn-primary btn-sm text-end">Create</a>
        </div>
    </div>
</thead>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-3">
            <div class="card p-4 mb-5 me-1" style="background-color :#9DC08B">
                <h4 class="text-center">
                    <a asp-action="GetProducts" asp-controller="Product" asp-route-id="@product.Id" class="nav-link text-dark">@product.ProductName ID:@product.Id</a>
                    <a asp-action="Delete" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-danger btn-sm">Silme</a>
                    <a asp-action="Update" asp-controller="Product" asp-route-id="@product.Id" class="btn btn-warning btn-sm">Güncelleme</a>
                </h4>
            </div>
        </div>
    }
</div>
