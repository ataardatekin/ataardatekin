@model Product
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:50px;height:500px;width:500px;">
    <div class="mt-2">
        <form class="border border- p-2 border-opacity-25" method="post">
            <header>
                <h2>Ürün Oluşturma</h2>
            </header>
            <body>


                <div class="mb-3">
                    <label class="form-label">Ürün Adı</label>
                    <input type="text" style="background-color:#EDF1D6" class="form-control" placeholder="Ürün Adı" asp-for="ProductName">
                </div>
                <div class="mb-3">
                    <label class="form-label">Ürün Fiyatı</label>
                    <input type="text" style="background-color:#EDF1D6" class="form-control" placeholder="Ürün Fiyatı" asp-for="UnitPrice">
                </div>
                <div class="mb-3">
                    <label class="form-label">Stok Miktarı</label>
                    <input type="text" style="background-color:#EDF1D6" class="form-control" placeholder="Stok Miktarı" asp-for="UnitsInStock">
                </div>
                <div class="mb-3">
                    <label class="form-label">Açıklama</label>
                    <input type="text" style="background-color:#EDF1D6" class="form-control" placeholder="Açıklama" asp-for="Description">
                </div>
                <div class="mb-3">
                    <label class="form-label">Resim Yolu</label>
                    <input type="text" style="background-color:#EDF1D6" class="form-control" placeholder="Resim Yolu" asp-for="ImagePath">
                </div>





                <div class="d-flex">

                    <button type="submit" class="btn btn-primary">Oluştur</button>
                </div>


            </body>

        </form>
    </div>
</div>

