@model Product
@{
    ViewData["Title"] = "Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="margin-top:50px;height:500px;width:500px;">
    <div class="mt-2">
        <form class="border border- p-2 border-opacity-25" method="post">
            <header>
                <h2>Ürün Güncelleme</h2>
            </header>
            <body>

                <div class="mb-3">
                    <input type="hidden" class="form-control" asp-for="Id" style="background-color:#EDF1D6">
                </div>
                <div class="mb-3">
                    <label class="form-label">Ürün Adı</label>
                    <input type="text" class="form-control" asp-for="ProductName" style="background-color:#EDF1D6">
                </div>
                <div class="mb-3">
                    <label class="form-label">Ürün Fiyatı</label>
                    <input type="text" class="form-control" asp-for="UnitPrice" style="background-color:#EDF1D6">
                </div>
                <div class="mb-3">
                    <label class="form-label">Stok Miktarı</label>
                    <input type="text" class="form-control" asp-for="UnitsInStock" style="background-color:#EDF1D6">
                </div>
                <div class="mb-3">
                    <label class="form-label">Açıklama</label>
                    <input type="text" class="form-control" asp-for="Description" style="background-color:#EDF1D6">
                </div>
                <div class="mb-3">
                    <label class="form-label">Resim Yolu</label>
                    <input type="text" class="form-control" asp-for="ImagePath" style="background-color:#EDF1D6">
                </div>

                <div class="d-flex">

                    <button type="submit" class="btn btn-warning">Güncelle</button>
                </div>


            </body>

        </form>
    </div>
</div>

